# =================================================
# CONFIGURAZIONE ENVIRONMENT MAVERICK VPS
# =================================================
# Copia questo file come .env e modifica i valori

# =================================================
# PORTA APPLICAZIONE
# =================================================
MAVERICK_PORT=8080

# =================================================
# DATABASE POSTGRESQL (ESTERNO)
# =================================================
# URL completo del database PostgreSQL esistente
DATABASE_URL=jdbc:postgresql://your-postgres-host:5432/maverick
DATABASE_USER=maverick_user
DATABASE_PASSWORD=your_secure_password

# =================================================
# MINIO STORAGE (ESTERNO)
# =================================================
# Endpoint del tuo MinIO esistente
MINIO_ENDPOINT=http://your-minio-host:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=maverick-models
MINIO_REGION=us-east-1

# =================================================
# JWT SECURITY
# =================================================
# Chiave segreta JWT (DEVE essere cambiata in produzione!)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-256-bits-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =================================================
# CORS CONFIGURATION
# =================================================
# Origini permesse per CORS (separare con virgola)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =================================================
# SERVER CONFIGURATION
# =================================================
# Path dell'applicazione (se serve sotto-path)
CONTEXT_PATH=/

# =================================================
# UPLOAD LIMITS
# =================================================
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB

# =================================================
# RISORSE CONTAINER
# =================================================
# Limiti memoria e CPU
MEMORY_LIMIT=2G
MEMORY_RESERVATION=1G
CPU_LIMIT=2.0
CPU_RESERVATION=1.0

# =================================================
# JVM TUNING (opzionale)
# =================================================
# Parametri aggiuntivi JVM se necessari
JAVA_OPTS=-XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/app/logs

# =================================================
# ESEMPI DI CONFIGURAZIONE
# =================================================
# Per PostgreSQL locale:
# DATABASE_URL=jdbc:postgresql://127.0.0.1:5432/maverick

# Per MinIO locale:
# MINIO_ENDPOINT=http://127.0.0.1:9000

# Per MinIO con TLS:
# MINIO_ENDPOINT=https://your-minio-domain.com

# Per subdirectory:
# CONTEXT_PATH=/api/maverick
