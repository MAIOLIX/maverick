# =================================================
# MAVERICK VPS PRODUCTION DEPLOYMENT
# =================================================
# File di configurazione per deployment VPS
# Usare questo invece di .env per deployment produzione

# =================================================
# APPLICATION
# =================================================
MAVERICK_PORT=8080
CONTEXT_PATH=

# =================================================
# DATABASE (PostgreSQL Esterno)
# =================================================
# CONFIGURARE I PARAMETRI DEL TUO DATABASE
DATABASE_URL=jdbc:postgresql://your-db-host:5432/maverick
DATABASE_USER=maverick
DATABASE_PASSWORD=your-secure-password

# =================================================
# MINIO (Storage Esterno)
# =================================================
# CONFIGURARE I PARAMETRI DEL TUO MINIO
MINIO_ENDPOINT=http://your-minio-host:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=maverick-models
MINIO_REGION=us-east-1

# =================================================
# SECURITY
# =================================================
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =================================================
# CORS
# =================================================
CORS_ORIGINS=https://your-domain.com

# =================================================
# UPLOAD LIMITS
# =================================================
MAX_FILE_SIZE=100MB
MAX_REQUEST_SIZE=100MB
